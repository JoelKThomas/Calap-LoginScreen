<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joel.prime.MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ripple"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="calap"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:textSize="28sp"
            />
        <Button
            android:id="@+id/button"
            android:background="#ff0044"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Registration" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners_dark"
            android:id="@+id/text_phno"
            android:textSize="20dp"
            android:gravity="left|center_vertical"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:inputType="number"
            android:layout_above="@+id/button"
            android:textColorHint="#8f7c7d"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"

            android:hint="Phone Number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:textSize="25dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:id="@+id/text_code"
            android:layout_above="@+id/text_phno"
            android:textColorHint="#666"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:hint="India +91"/>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded_corners"
        android:textSize="25dp"
        android:inputType="textPersonName"
        android:textColor="#333"
        android:id="@+id/text_language"
        android:layout_above="@id/text_code"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="#666"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="English"/>





    </RelativeLayout>
</LinearLayout>


